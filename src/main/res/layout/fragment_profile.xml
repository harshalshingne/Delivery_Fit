<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/profile_title_name_Textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Pravin Shukla"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/profile_Image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/profile_name_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pravin Shukla"
        android:textSize="@dimen/textS"
        android:visibility="gone"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_Image" />

    <TextView
        android:id="@+id/warehouse_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Warehouse"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/profile_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/warehouse_no_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="@dimen/textS"
        app:layout_constraintEnd_toStartOf="@+id/profile_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warehouse_Textview" />

    <TextView
        android:id="@+id/owner_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Owner"
        android:textColor="@color/black"
        android:textSize="@dimen/textS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_Image"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/owner_no_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="19"
        android:textColor="@color/black"
        android:textSize="@dimen/textS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_Image"
        app:layout_constraintTop_toBottomOf="@+id/owner_Textview" />

    <Button
        android:id="@+id/total_no_Button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/background_profile_btn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Total 25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_Textview" />
    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile__Relative"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_no_Button">
        <ImageView
            android:id="@+id/message_Imageview"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"
            android:background="@drawable/background_circle_light_yellow"
            android:src="@drawable/ic_email" />

        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/edt_profile_Button"
            android:textColor="#9a031e"
            android:visibility="visible"
            android:layout_marginEnd="@dimen/textS"
            android:background="@drawable/background_edit_profile_btn"
            android:text="Edit"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:id="@+id/profile_history__Button"
            android:textColor="#9a031e"
            android:visibility="visible"
            android:layout_marginStart="@dimen/textS"
            android:layout_toRightOf="@+id/edt_profile_Button"
            android:background="@drawable/background_edit_profile_btn"
            android:text="History"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/status_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Highway on the hell"
        android:textSize="@dimen/textS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile__Relative" />
    <TextView
        android:id="@+id/post_Textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Post"
        android:textColor="@color/black"
        android:textSize="@dimen/textS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_Textview" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/faint_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_Textview" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/delivery_products_Recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="400dp" />
</androidx.constraintlayout.widget.ConstraintLayout>